<center><h1>Create New User</h1></center>

<center><%= form_with url: "/register", method: :post, data: {turbo: false}  do |f|  %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :password %>
  <%= f.password_field :password, required: true %><br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, required: true %><br><br>
  <%= f.submit "Register" %>
<% end %></center>



